<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.kdt_bank_client2.UserBank.ContractChangeCtrl"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <!-- 고객 정보 -->
    <TitledPane text="고객 정보" expanded="true">
        <content>
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                </columnConstraints>
                <Label text="이름:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="주민번호:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label fx:id="lblResident" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="전화번호:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="이메일:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label fx:id="lblEmail" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="주소:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="lblAddress" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
            </GridPane>
        </content>
    </TitledPane>

    <!-- 보유 약정 리스트 -->
    <TitledPane text="보유 약정" expanded="true">
        <content>
            <VBox fx:id="contractListVBox" spacing="8"/>
        </content>
    </TitledPane>

    <!-- 선택 약정 변경 UI -->
    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="15"/>
            <ColumnConstraints percentWidth="35"/>
        </columnConstraints>

        <Label text="새 만기일:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="newMaturityDatePicker" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="금리 조정 가능:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <CheckBox fx:id="interestAdjustableCheckBox" disable="true"
                  onAction="#onInterestAdjustableChanged"
                  GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="새 금리:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="newInterestRateField" disable="true" prefWidth="120"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="상환방식:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="repaymentMethodComboBox" disable="true" prefWidth="140"
                  GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="한도:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="newLimitMoneyField" disable="true" prefWidth="120"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button fx:id="saveChangeBtn" text="저장" disable="true"
                onAction="#onSaveChange"
                GridPane.rowIndex="2" GridPane.columnIndex="3"/>
    </GridPane>
</VBox>

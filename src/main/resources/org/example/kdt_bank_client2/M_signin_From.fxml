<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.kdt_bank_client2.UserBank.SigninController2"
            prefHeight="900.0" prefWidth="1100.0">

    <VBox alignment="CENTER" layoutX="375.0" layoutY="250.0" spacing="15.0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="어서오세요!">
            <font>
                <Font name="Malgun Gothic Bold" size="36.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </Label>

        <TextField fx:id="idField" maxWidth="350.0" prefHeight="40.0" promptText="ID"
                   style="-fx-font-family: 'Malgun Gothic'; -fx-background-radius: 10;"/>
        <PasswordField fx:id="passwordField" maxWidth="350.0" prefHeight="40.0" promptText="비밀번호"
                       style="-fx-font-family: 'Malgun Gothic'; -fx-background-radius: 10;"/>

        <Button prefWidth="350.0" prefHeight="40.0" text="로그인"
                style="-fx-background-color: #0d6da9; -fx-text-fill: white; -fx-background-radius: 10;"
                onAction="#handleLogin">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <font>
                <Font name="Malgun Gothic Bold" size="18.0"/>
            </font>
        </Button>

    </VBox>
</AnchorPane>

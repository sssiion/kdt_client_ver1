<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.kdt_bank_client2.UserBank.CashinandoutController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #FAFAFA;">

    <!-- 좌측: 고객 계좌 목록 -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="나의 계좌 목록" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <ListView fx:id="lstAccounts" prefWidth="200"/>
        </VBox>
    </left>

    <!-- 중앙: 입출금 폼 -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- 선택된 계좌번호 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="계좌번호:" prefWidth="100" style="-fx-font-size:16;"/>
                <TextField fx:id="txtSelectedAccount" editable="false" prefWidth="300"/>
            </HBox>

            <!-- 금액 입력 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="금액:" prefWidth="100" style="-fx-font-size:16;"/>
                <TextField fx:id="txtAmount" prefWidth="300"/>
            </HBox>

            <!-- 버튼: 입금, 출금 -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button fx:id="btnDeposit" text="입금"
                        style="-fx-background-color:#4CAF50; -fx-text-fill:white;"
                        prefWidth="100" prefHeight="35"/>
                <Button fx:id="btnWithdraw" text="출금"
                        style="-fx-background-color:#F44336; -fx-text-fill:white;"
                        prefWidth="100" prefHeight="35"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
